<theme>

<formatVersion>7</formatVersion>

	<view name="system">

		<!-- Foreground-->
		<stackpanel name="foreground" extra="static">
			<pos>${stack_foreground_pos}</pos>
			<h>${stack_foreground_h}</h>
			<w>${stack_foreground_w}</w>
			<separator>0.0</separator>
			<orientation>vertical</orientation>
			<zIndex> 15 </zIndex>
			<image name="foreground_top">
				<path ifSubset="theme_style:neo">${neo_foreground_top_path}</path>
				<path ifSubset="theme_style:old">${foreground_top_path}</path>
				<h>${system_stack_top_h}</h>
				<linearSmooth>true</linearSmooth>
			</image>
			
			<image name="foreground_mid">
				<path>${foreground_mid_path}</path>
				<h>${system_stack_mid_h}</h>
			</image>
			
			<image name="foreground_bottom">
				<path>${foreground_bottom_path}</path>
				<h>${system_stack_bottom_h}</h>
			</image>
		</stackpanel>
		<image name="bckground_top" extra="static" ifSubset="theme_style:neo">
			<path>${neo_back_top_path}</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>${background_scale}</size>
			<linearSmooth>true</linearSmooth>
			<zIndex>12</zIndex>
		</image>
		
		<!-- Background-->
		<image name="background_boxart" extra="true">
			<path>${background_path}</path>
			<default>${default_background_path}</default>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>${background_scale}</size>
			<zIndex>10</zIndex>
			<storyboard repeat="forever"  ifSubset="breathing:on">
				<animation property="scale" from="1" to="1.0025" duration="500" mode="easeIn"/>
				<animation property="scale" from="1.0025" to="1.005" duration="500" mode="easeOut" begin="500"/>
				<animation property="scale" from="1.005" to="1.0025" duration="500" mode="easeIn" begin="1000"/>
				<animation property="scale" from="1.0025" to="1" duration="500" mode="easeOut" begin="1500"/>
			</storyboard>
			<linearSmooth>true</linearSmooth>
			<visible>true</visible>
		</image>
		<!-- Logo -->
		<image name="logo">
			<path>./../systems/logos/${system.theme}.webp</path>
			<!--<shared>true</shared>-->
			<linearSmooth>true</linearSmooth>
			<storyboard event="activate" repeat="forever" ifSubset="breathing:on">
				<animation property="scale" from="${logo_max_size}" to="${logo_mid_size}" duration="500" mode="easeIn"/>
				<animation property="scale" from="${logo_mid_size}" to="${logo_min_size}" duration="500" mode="easeOut" begin="500"/>
				<animation property="scale" from="${logo_min_size}" to="${logo_mid_size}" duration="500" mode="easeIn" begin="1000"/>
				<animation property="scale" from="${logo_mid_size}" to="${logo_max_size}" duration="500" mode="easeOut" begin="1500"/>
			</storyboard>
		</image>
		<carousel name="systemcarousel">
			<origin>0.5 0.5</origin>
			<pos>${logo_pos}</pos>
			<size>1 1</size>
			<color>00000000</color>
			<minLogoOpacity>0</minLogoOpacity>
			<logoScale>${logo_scale}</logoScale>
			<transitionSpeed>800</transitionSpeed>
			<systemInfoDelay>100</systemInfoDelay>
			<scaledLogoSpacing>.5</scaledLogoSpacing>
			<defaultTransition>fade &amp; slide</defaultTransition><!--fade &amp; -->
			<zIndex ifSubset="theme_style:neo">13</zIndex>
			<zIndex ifSubset="theme_style:old">16</zIndex>
		</carousel>
		<!-- Controler -->
		<image name="controler" extra="true">
			<path>./../systems/controllers/${system.theme}.png</path>
			<default>./../systems/controllers/_default.png</default>
			<origin>0.5 0.5</origin>
			<pos>${controller_pos}</pos>
			<maxSize>${controller_maxSize}</maxSize>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			<storyboard ifSubset="controllers_animations:simple">
				<animation property="opacity" from="0" to="1" begin="50" duration="120" mode="easeOut"/>
				<animation property="scale" from="0.5" to="1" begin="50" duration="220" mode="easeOut"/>
			</storyboard>
			<storyboard ifSubset="controllers_animations:bump">
				<animation property="opacity" from="0" to="1" begin="50" duration="350" mode="easeOut"/>
				<animation property="scale" from="0.5" to="1" begin="50" duration="500" mode="Bump"/>
			</storyboard>
			<storyboard ifSubset="controllers_animations:swoop">
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<animation property="scale" from="0.8" to="1" duration="350" mode="easeIn"/>
				<animation property="y" from="0.9" duration="500" mode="Bump"/>
			</storyboard>
			<zIndex>13</zIndex>
		</image>
		<!-- System view Info disabled-->
		<text name="systemInfo" >
			<origin>0 0</origin>
			<pos>${sysinfo_pos}</pos>
			<size>1 0.22</size>
			<backgroundColor>00000000</backgroundColor>
			<color>ADADAD</color>
			<fontPath>${fontRegular}</fontPath>
			<fontSize>0.025</fontSize>
			<zIndex>0</zIndex>
		</text>
		
		<!-- Manufacturer Infos-->
		<text name="Manufacturer" extra="static">
			<origin>0.5 0</origin>
			<pos>${manufacturer_pos}</pos>
			<size>1 0.22</size>
			<alignment>center</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>ffffff</color>
			<fontPath>${fontRegular}</fontPath>
			<fontSize>0.02</fontSize>
			<text>{system:manufacturer}  {system:releaseYear}</text>
			<opacity>0.8</opacity>
			<w>0.5</w>
			<singleLineScroll>true</singleLineScroll>
			<autoScroll>horizontal</autoScroll>
			<autoScrollDelay>0.01</autoScrollDelay>
			<glowSize>0.5</glowSize>
			<glowColor>ffffff26</glowColor>
			<zIndex>25</zIndex>
		</text>
			
		<!-- Total games-->
		<text name="TotalGames" extra="static">
			<origin>0 0</origin>
			<pos>${totalgame_pos}</pos>
			<!--<size>1 0.22</size>-->
			<alignment>center</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>ffffff</color>
			<fontPath>${fontRegular}</fontPath>
			<fontSize>0.025</fontSize>
			<text ifSubset="theme_style:neo">{system:total} Games &#x2014;&#x2014;&#x2014;&#x2014;</text>
			<text ifSubset="theme_style:old">{system:total} Games</text>
			<emptyTextDefaults>0</emptyTextDefaults>
			<opacity>0.8</opacity>
			<glowSize>0.5</glowSize>
			<glowColor>ffffff26</glowColor>
			<zIndex ifSubset="theme_style:neo">13</zIndex>
			<zIndex ifSubset="theme_style:old">16</zIndex>
		</text>
		
		<stackpanel name="Infos" extra="static">
			<pos>${system_stack_info_pos}</pos>
			<h>0.12</h>
			<w>0.2</w>
			<separator>0.000</separator>
			<orientation>vertical</orientation>
			<zIndex ifSubset="theme_style:neo">13</zIndex>
			<zIndex ifSubset="theme_style:old">16</zIndex>
			<!-- Game played-->
			<text name="GamePlayed">
				<h>0.5</h>
				<alignment>left</alignment>
				<backgroundColor>00000000</backgroundColor>
				<color>ffffff</color>
				<fontPath>${fontRegular}</fontPath>
				<fontSize>${system_stack_info_fontsize}</fontSize>
				<text ifSubset="theme_style:neo">&#x2014;&#x2014; {system:gamesPlayed} Played</text>
				<text ifSubset="theme_style:old">&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;{system:gamesPlayed} Played</text>
				<emptyTextDefaults>0</emptyTextDefaults>
				<opacity>0.8</opacity>
				<glowSize>0.5</glowSize>
				<glowColor>ffffff26</glowColor>
			</text>
			<!-- Favorites-->
			<text name="Favorites">
				<h>0.5</h>
				<alignment>left</alignment>
				<backgroundColor>00000000</backgroundColor>
				<color>ffffff</color>
				<fontPath>${fontRegular}</fontPath>
				<fontSize>${system_stack_info_fontsize}</fontSize>
				<text ifSubset="theme_style:neo">&#x2014;&#x2014; {system:favorites} Favorites</text>
				<text ifSubset="theme_style:old">&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;&#xa0;{system:favorites} Favorites</text>
				<emptyTextDefaults>0</emptyTextDefaults>
				<opacity>0.8</opacity>
				<glowSize>0.5</glowSize>
				<glowColor>ffffff26</glowColor>
			</text>
		</stackpanel>
			

	</view>
</theme>