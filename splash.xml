<!--
  Theme: Albedo
  Author: giovaboy
-->

<theme>
  <formatVersion>7</formatVersion>

  <view name="splash">
    <splash name="splash">
      <backgroundColor>000000</backgroundColor>
    </splash>
    <image name="background">
		<pos>0.5 0.5</pos>
		<origin>0.5 0.5</origin>
		<size>${system_background_scale}</size>
		<path>./_inc/images/knulli.png</path>
    </image>
    <image name="progressbar">
      <color>000000</color>
      <origin>0.5 1</origin>
      <pos>0.5 1</pos>
      <maxSize>1 0.01</maxSize>
      <minSize>1 0.01</minSize>
    </image>
    <image name="progressbar:active">
      <color>3b4066</color>
      <tile>true</tile>
    </image>
    <text name="label">
      <alignment>center</alignment>
      <fontPath>./_inc/fonts/5by7.ttf</fontPath>
      <fontSize>0.05</fontSize> <!-- 12-->
      <color>ffffff</color>
      <origin>0.5 1</origin>
      <pos>0.5 0.95</pos>
    </text>
  </view>
</theme>